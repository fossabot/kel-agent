#!/usr/bin/make -f
# -*- makefile -*-
# build with `dpkg-buildpackage -uc -us -b`

PKGDIR=debian/kel-agent

%:
	dh $@

clean:
	dh_clean
	rm -rf $(PKGDIR)

build:
	make kel-agent

binary: clean build
	dh_prep
	dh_installdirs

	mkdir -p $(PKGDIR)/usr/bin

	mv ./kel-agent $(PKGDIR)/usr/bin/

	dh_installman
	dh_strip
	dh_compress
	dh_fixperms
	dh_installdeb
	dh_gencontrol
	dh_md5sums
	dh_builddeb
